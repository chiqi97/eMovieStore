@model MovieDetailsViewModel

@{ ViewData["Title"] = "O filmie:"; }

<h1>O filmie</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Movie.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Price.ToString() PLN
        </dd>
        <!--<dt class="col-sm-2">
        <a href="Model.ReturnUrl">Powrót</a>
    </dt>-->
    </dl>
</div>