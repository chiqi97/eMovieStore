@model IEnumerable<Movie>

@{ ViewData["Title"] = "eMovieStore"; }
@await Html.PartialAsync("Carousel")

@*<h1 class="display-4 pb-5" align="center">Welcome</h1>*@

<h1 class="display-4 pb-5" align="center">Wszystkie filmy</h1>

@*<div class="row">*@
<div class="card-deck">
    @foreach (var movie in Model)
    {
        var photoPath = "~/images/" + (movie.PhotoPath ?? "cover.jpg");

    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header">
            <h3>@movie.Title</h3>
            <h5>@movie.Author</h5>
        </div>

        <img class="card-img-top imageThumbnail" src="@photoPath"
             asp-append-version="true" />

        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@movie.Id"
               class="btn btn-primary m-1">Add</a>
            </div>
        </div>


            }


        </div>


        @section Scripts{
            <script src="~/js/CustomScript.js"></script>
        }
